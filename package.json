{
  "name": "@hexbit/v3",
  "version": "0.1.0",
  "description": "A TypeScript-based Vue 3 library that simplifies D3.js visualizations using Composition API patterns.",
  "type": "module",
  "main": "./dist/v3.umd.cjs",
  "module": "./dist/v3.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/v3.js",
      "require": "./dist/v3.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "vue",
    "vue3",
    "d3",
    "d3js",
    "charts",
    "visualization",
    "data-visualization",
    "typescript",
    "composition-api"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hexbit-Studios/v3.git"
  },
  "bugs": {
    "url": "https://github.com/Hexbit-Studios/v3/issues"
  },
  "homepage": "https://github.com/Hexbit-Studios/v3#readme",
  "author": "Hexbit Studios <jack@hexbitstudios.com>",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "lint-staged": "lint-staged",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "type-check": "vue-tsc --noEmit",
    "prepare": "husky",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "d3": "^7.9.0",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@rushstack/eslint-patch": "^1.14.1",
    "@types/d3": "^7.4.3",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.3"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
